<h3>Add Comment</h3>
<%= form_for ([@post, @post.comments.build]) do |f| %>
    <p>
        <%= f.label :username %><br>
        <%= f.text_field :username, class: 'form-control' %>
    </p>
    <p>
        <%= f.label :comment %><br>
        <%= f.text_area :comment, class: 'form-control' %>
    </p>
    <p>
        <%= f.submit class: 'btn btn-default' %>
    </p>
<% end %>